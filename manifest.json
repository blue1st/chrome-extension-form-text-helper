{
  "manifest_version": 3,
  "name": "FormTextHelper",
  "version": "1.0",
  "description": "右クリックメニューからtextareaダイアログを表示し、入力内容をフォーカスしていたフォームに挿入",
  
  "permissions": [
    "contextMenus",
    "activeTab"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
